<div class="modal-dialog" role="document">
  <div class="modal-content">
      <div class="modal-header">
         <h3 class="modal-title">Kiosk Data</h3>
      </div>
     <div class="modal-body">
         <div class="form-group">
           <label class="col-sm-2 control-label">Name</label>
               <div class="col-sm-10">
                 <input type="text" id="name" class="form-control" value="{{name}}" />
               </div>
         </div> 
         <br>
         <br>  
         <div class="form-group">
           <label class="col-sm-2 control-label">Group</label>
               <div class="col-sm-10">
                 <input type="text" id="group" class="form-control" value="{{group}}" />
               </div>
         </div> 
         <br>
         <br>    
         <div class="form-group">
           <label  class="col-sm-2 control-label"
                              for="inputEmail3">Email</label>
               <div class="col-sm-10">
                 <input type="email" id="email" class="form-control" value="{{email}}"/>
               </div>
         </div>
          <br>
         <br> 
          <div class="form-group">
           <label class="col-sm-2 control-label">Off Time</label>
               <div class="col-sm-10">
                 <input type="number" id="offtime" min="0" class="form-control" value="{{offtime}}" />
               </div>
         </div>
         <br>
         <br>
         <div class="form-group">
               <div class="col-sm-offset-2 col-sm-10">
                 <div id="mute" class="checkbox">
                   <label><input type="checkbox" value="{{mute}}"/>Mute</label>
                 </div>
               </div>
         </div>
         <br>
         <br> 
       <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" id="btnSave" class="btn btn-danger">Save changes</button>
      </div>
     </div>
   </div>
</div>